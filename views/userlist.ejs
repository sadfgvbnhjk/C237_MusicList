<!DOCTYPE html>
<html lang="en">

<head>
    <title>User list</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>

    <div class="container">
        <h1 class="mt-5">User list</h1>
        <% if (users && users.length > 0) { %>
            <% users.forEach(function(users) { %> <!-- Check if user data exists -->
                <div class="mb-4 border p-3 rounded">
                    <p><b>Username:</b><br>
                        <%= users.username %>
                    </p>
                    <p><b>Email:</b><br>
                        <%= users.email%>
                    </p>
                    <p><b>Password:</b><br>
                        <%= users.password %>
                    </p>
                    <p><b>Address:</b><br>
                        <%= users.address %>
                    </p>
                    <p><b>Role:</b><br>
                        <%= users.role%>
                    </p>
                </div>
            <% }); %>
        <% } else { %>
            <p>No user found.</p>
        <% } %>
        <a href="/">Back</a>
    </div>

</body>

</html>

